<% @news = News.find(:all, :conditions => "catid=#{ @project.id } and status = #{News::STATUS[:Enabled]}", :order => "updated_at desc", :limit => 3) %>
<% if @news.size > 0 %>
  <ul>
  <%for news in @news %>
      <li>
        <%= link_to h(news.subject), news1_path(:id => news.id, :project_id => news.catid), :class => "news_subject" %>
        <%= news.updated_at.strftime "%Y-%m-%d" %>
      </li>
  <% end %>
</ul>
<% else %>
  <%= _('No News') %>
<% end %>
<%=link_to _('More...'), news_path(:project_id => @project.id), :class => "more" %>
