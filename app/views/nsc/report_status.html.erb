Project names:
<% form_tag(:action => :report_status) do %>
  <%= text_area_tag(:project_names, params[:project_names]) %><br/>
<%= submit_tag "Search" %>
<% end %>
<% if params[:project_names] %>
  <table border="1">
    <% params[:project_names].to_a.map(&:strip).each do |line| %>
      <tr><td><%= line %></td><td><%= (p = Project.find_by_name(line)) ? (@project_name_to_files[line] || []).join("<br/>") : "bad project name" %></td></tr>
    <% end %>
  </table>
<% end %>
