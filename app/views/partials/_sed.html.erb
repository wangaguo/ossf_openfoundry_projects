<% if project.accepts_role?("Admin", current_user()) -%>
    <td><%= link_to _('Show'), :action => 'show', :id => project.id %></td>
    <td><%= link_to _('Edit'), :action => 'edit', :id => project.id %></td>
    <td><%= link_to _('Destroy'), { :action => 'destroy', :id => project.id }, :confirm => 'Are you sure?', :method => :post %></td>
<% else %>
  <td><%= link_to _('Show'), :action => 'show', :id => project.id %></td>
  <td><%_('Edit')%></td>
  <td><%_('Destroy')%></td>
<% end %>
