<%

if attach.filetype.chomp =~ /^image/ 
  image_name = File.join(RIT_IMAGE_THUMB_DIR ,attach.filename )
  download_link= "/of/rit_attachs/" + attach.filename
  download_target = "_blank"
else
  image_name = 'rit_ico_attach.png'
  download_link="?dl="+ attach.id.to_s
  download_target = "_self"
end
%>
<%
file_attach_path = File.join( RIT_UPLOAD_PATH  ,attach.filename )
if File.exist?(file_attach_path)
%>
  <%=link_to image_tag(image_name ,:height => '64' ,:alt => attach.filename) ,download_link ,:target => download_target %>
  <%=link_to attach.OrigName ,download_link ,:target => download_target %>
  (<%=number_to_human_size(File.size(file_attach_path))%>)
<%else%>
  <%=content_tag(:span,attach.OrigName, :style => "text-decoration:line-through;") %>(<%=t('rit_attachment_error_mag')%>)
<%end%>
<br /> 
