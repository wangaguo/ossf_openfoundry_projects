<h1>Release#edit</h1>
<p class=ReleaseBasic>
  <% form_for :release, @release, :url => {:id => @release,
    :action => :update}, :html => {:method => :put} do |f|%>
    <%= arranged('ReleaseNew', @release, {
        :editable => f,
        :fields_per_column => 1
      }) %>
    <%= submit_tag "Update" %> 
    <br/>
    <%= link_to '[Add Files]', 
      :project_id => @project_id,
      :action => :uploadfiles ,
      :id => @release
    %>
  <% end %>
</p>

