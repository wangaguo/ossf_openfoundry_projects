<div title="user signup" class="form">
  <%#= head_helper :error => true %>
  <%= show_flash :user %>
  <div class="form-padding">
    <% form_for :user, :url => {:action => :signup} do |f|-%>
      <%= render :partial => 'edit', :locals => { :f => f, :user => @user, :submit => false} %></br>
      <%= render :partial => 'password', :locals => { :f => f, :submit => false} %>
      <div class="button-bar">
        <%= submit_tag _('User|Signup') %>
      </div>
    <% end -%>
  </div>
</div>