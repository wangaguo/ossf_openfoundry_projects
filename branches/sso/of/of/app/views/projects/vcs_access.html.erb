<%
case @vcs
when Project::VCS[:SUBVERSION]
-%>
<p>
  <%=t 'repository.use_svn_help'%>
  <br/><b><%= @src %></b>
</p>
<p><%= auto_link(simple_format(h(@vcs_desc))) %></p>
<p><a href="http://<%=SSO_HOST%>/of/help/vcs#%E9%80%8F%E9%81%8E%E5%91%BD%E4%BB%A4%E5%88%97%E5%AD%98%E5%8F%96SVN%E6%AA%94%E6%A1%88%E5%BA%AB"><%= _('Subversion Access|See More') %></a>.</p>

<% when Project::VCS[:CVS] -%>
<h1><%= _('Anonymous CVS Access') %></h1>
<p>
  <%= t 'repository.use_cvs_help'%>
  <br/><b><%= @src %></b>
</p>
<p><%= auto_link(simple_format(h(@vcs_desc))) %></p>
<p><a href="http://<%=SSO_HOST%>/of/help/vcs#%E9%80%8F%E9%81%8E%E5%91%BD%E4%BB%A4%E5%88%97%E5%
  AD%98%E5%8F%96CVS%E6%AA%94%E6%A1%88%E5%BA%AB"><%= _('Subversion Access|See More') %></a>.</p>

<% when Project::VCS[:SUBVERSION_CLOSE] -%>
<h1><%= _('Subversion: Members Only') %></h1>
<p>
  <%= _('This project can only be accessed by members.') %>
  <br/><b><%= @src %></b> 
</p>
<p><%= auto_link(simple_format(h(@vcs_desc))) %></p>


<% when Project::VCS[:REMOTE] -%>
<h1><%= _('Remote Repository') %></h1>
<p>
  <%= _('This project is using a remote repository.') %>
</p>
<p><%= auto_link(simple_format(h(@vcs_desc))) %></p>

<% else -%>
<h3><%= _('No Version Control System') %></h3>
<p><%= auto_link(simple_format(h(@vcs_desc))) %></p>
<% end -%>
