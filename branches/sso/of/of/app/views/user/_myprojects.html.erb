<% module_title = capture do -%>
  My Projects
<% end %>

<% module_content = capture do -%>
  <% if not my_projects.blank? %>
    <table>
      <% my_projects.each do | p | %>
        <tr>
          <td rowspan="2"> 
            <a href="<%=project_url( p.id ) %>"><img src="<%=url_for( :controller => :images, :action => "cached_image", :id => "#{ p.icon }_64" ) %>"></a>
          </td>
          <td><a href="<%=project_url( p.id ) %>"><%="#{ p.name }" %></a></td>
          <td><%="#{ tz_date( p.updated_at ) }" %></td>
        </tr>
        <tr>
          <td colspan="2">
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/rt" %>">Issue Tracker</a></span>
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/kwiki" %>">Wiki</a></span>
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/download" %>">Release</a></span>
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/member_edit" %>">Member</a></span>
            <span class="mp_button"><a href="<%="/of/projects/permission_edit/#{ p.id }" %>">Permission</a></span>
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/viewvc" %>">Version Control</a></span>
            <span class="mp_button"><a href="<%="/of/projects/#{ p.id }/survey" %>">Surveys</a></span>
          </td>
        </tr>
      <% end %> 
    </table>
  <% else %>
    no data
  <% end %>
<% end %>

<%=render :file => 'layouts/rt_module', :locals => { :module_title => module_title, :module_content => module_content, :variation => 'square1' } %>


