          <form action="[% path_cgi %]" method="post">
         
	  <table border="0" style="border-spacing: 0.5em;">
				<tr><th style="text-align: left; font-weight: normal; white-space: nowrap;">[%|loc%]Email[%END%] :</th><td>[% user.email %]</td></tr>
				<tr><th style="text-align: left; font-weight: normal; white-space: nowrrap;"><label for="gecos">[%|loc%]Name[%END%] :</label></th>
					<td><input type="text" id="gecos" name="gecos" size="30" value="[% user.gecos %]" /></td></tr>
					<tr><th style="text-align: left; font-weight: normal; white-space: nowrap; color: [% dark_color %];"><label for="lang">[%|loc%]Language[%END%] :</label></th>
            <td><select id="lang" name="lang">
              [% FOREACH l = languages %]
		<option value='[% l.key %]' [% l.value.selected %]>[% l.value.complete %]</option>
              [% END %]
            </select></td></tr>
						<tr><th style="text-align: left; font-weight: normal; white-space: nowrap; color: [% dark_color %];"><label for="cookie_delay">[%|loc%]Connexion expiration period[%END%] :</label></th>
            <td><select name="cookie_delay" id="cookie_delay">
              [% FOREACH period = cookie_periods %]
                <option value="[% period.value %]" [% period.selected %]>[% period.desc %]</option>
              [% END %]
            </select></td></tr>
	   </table>
            <input class="MainMenuLinks" type="submit" name="action_setpref" value="[%|loc%]Submit[%END%]" />
          </form><br />


 [% IF auth == 'classic' %]
     <h2 class="block">[%|loc%]Changing your email address[%END%]</h2>
     
           <form action="[% path_cgi %]" method="post">
        
					 <table border="0" style="border-spacing: 0.5em;"> 
					 <tr><th style="text-align: left; font-weight: normal; white-space: nowrap; color: [% dark_color %];"><label for="email">[%|loc%]New email address :[%END%]</label></th>
            <td><input id="email" name="email" size="15" /></td></tr>
					 </table>
            <input class="MainMenuLinks" type="submit" name="action_change_email" value="[%|loc%]Submit[%END%]" />
            </form><br /> <br /> 

           <h2 class="block">[%|loc%]Changing your password[%END%]</h2>
  
          <form action="[% path_cgi %]" method="post">
					<table border="0" style="border-spacing: 0.5em;">
					<tr><th style="text-align: left; font-weight: normal; white-space: nowrap; color: [% dark_color %];"><label for="newpasswd1">[%|loc%]New password :[%END%]</label></th>
					<td><input type="password" name="newpasswd1" id="newpasswd1" size="15" /></td></tr>
					<tr><th style="text-align: left; font-weight: normal; white-space: nowrap; color: [% dark_color %];"><label for="newpasswd2">[%|loc%]Re-enter your new password :[%END%]</label></th>
            <td><input type="password" name="newpasswd2" id="newpasswd2" size="15" /></td></tr>
					</table>
          <input class="MainMenuLinks" type="submit" name="action_setpasswd" value="[%|loc%]Submit[%END%]" />
            </form><br />
	    [% END %]


           <h2 class="block">[%|loc%]Your other email addresses[%END%]</h2>


    <table style="width: auto;" cellpadding="1" cellspacing="0">
      [% IF !unique %]
      <tr valign="top">
      <td>  
            <form action="[% path_cgi %]" method="post"> 
   	    [% FOREACH email = alt_emails %]
