<% module_title = capture do -%>
  <%=link_to( 
     image_tag('atom.png', 
          {:alt => 'atom', :width => '20px', :style => 'padding:8px;float:right'}),
     {:controller => :releases, :action => :new_release_feed, :format => :xml}) %>
  <%= _("Latest Releases") %>
<% end -%>

<% module_content = capture do -%>
<ul>
  <% for release in newReleasesList -%>
  <li>
    <%= link_to h(release.project.summary + " " + release.version), download1_path(:project_id => release.project_id) + "##{release.version}" %>
    <%= release.created_at.strftime "%Y-%m-%d" %>
  </li>
  <% end -%>
</ul>
<%= link_to _("More..."), {:controller => 'releases', :action => 'latest'}, :class => "more" %>
<%=auto_discovery_link_tag(:rss,
   {:format => :rss, :controller => :releases, :action => "new_release_feed"},
   { :title => s_( "Feed|#{ _( 'Lastest Releases' ) } RSS Feed" ) } ) %>
<%=auto_discovery_link_tag(:atom,
   {:format => :xml, :controller => :releases, :action => "new_release_feed"},
   { :title => s_( "Feed|#{ _( 'Lastest Releases' ) } ATOM Feed" ) } ) %>
<% end -%>

<%= render :file => 'layouts/rt_module', :locals => {:module_title => module_title, :module_content => module_content, :variation => 'square1'} %>
