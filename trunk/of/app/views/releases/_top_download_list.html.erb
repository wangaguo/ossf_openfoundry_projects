<div id="ReleaseList">
<table class=list-table>
  <tr>
    <th align=left></th>
    <th align=left nowrap><%= _('Rank') %></th>
    <th align=left><%= _('Release Name') %></th>
    <th align=left style="white-space:nowrap;"><%= _('Download count') %></th>
  </tr>
  
<% i=(@page-1)*100 %>
<% for release in releases %>
 <%if i % 2 == 0; class_name="odd"; else; class_name="even"; end; -%>
  <tr class="<%= class_name %>">
    <td><img src="<%= cached_image_images_path(:id => "#{release.icon}_16") %>"/></td>
    <td><%= (i+=1).to_s %></td>
    <td><%= link_to h(release.summary), project_download_path(:project_id => release.id) %></td>
    <td><%= release.count_all %></td>
  </tr>
<% end %>
</table>
<%= will_paginate releases %>
</div>
